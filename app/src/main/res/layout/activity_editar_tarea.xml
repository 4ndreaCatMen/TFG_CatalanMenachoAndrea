<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_back_arrow"
        android:contentDescription="Volver"
        android:layout_gravity="start|top"
        app:tint="#B08968" />

    <!-- Layout original sin cambios -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <EditText
            android:id="@+id/etTituloEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Título"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etDescripcionEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descripción"
            android:textSize="16sp"
            android:layout_marginTop="12dp" />

        <Spinner
            android:id="@+id/spinnerPrioridadEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/btnSeleccionarHora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccionar hora"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/tvHoraSeleccionada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hora no seleccionada"
            android:gravity="center"
            android:paddingTop="8dp"
            android:textSize="14sp"
            android:textColor="#555555" />

        <Button
            android:id="@+id/btnSeleccionarFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccionar fecha"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvFechaSeleccionada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha no seleccionada"
            android:gravity="center"
            android:paddingTop="4dp"
            android:textSize="14sp"
            android:textColor="#555555" />

        <Button
            android:id="@+id/btnGuardarCambios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar cambios"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</FrameLayout>
